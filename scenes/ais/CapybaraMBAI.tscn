func _on_AI_state_changed(new_state):
	if player != null and weapon != null:
		match new_state:
			State.ENGAGE:
				set_state(State.PHASE1)
			State.PHASE1:
				owner.get_node(\"AnimationPlayer\").play(\"Phase1\")
