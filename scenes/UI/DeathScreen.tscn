var _player
func initialize(player):
	_player = player
	# Controlla se tutti i giocatori sono morti, se si abilita MenuButton
	# Mostra in modo carino tutte le statistiche
	var time = round((OS.get_ticks_msec() - player.data.joinTime) / 1000)
	var minutes = time / 60
	var seconds = fmod(time, 60)
	$Texts/Timer/Label.text = \"%02d:%02d\" % [minutes, seconds]
	
	# Bottone per copiare le statistiche da mandare agli amici
	# Bottone per SPECTARE i tuoi amici
	pass


func _on_MenuButton_pressed():
	get_tree().change_scene(\"res://Title.tscn\")
	# TODO transizione
	get_tree().current_scene.get_node(\"Transitioner\").transition()


func _on_PlayButton_pressed():
	pass
